  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.29.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "release-it": "^19.0.3",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
