{
  "name": "@unternet/tabletop",
  "version": "0.1.0",
  "description": "A monorepo housing the Tabletop application & kernel.",
  "main": "index.js",
  "type": "module",
  "author": "Rupert Manfredi <rupert@unternet.co>",
  "license": "MPL-2.0",
  "workspaces": [
    "desktop"
  ],
  "scripts": {
